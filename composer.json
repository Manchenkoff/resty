{
  "name": "manchenkov/yii2-project",
  "description": "Custom Yii 2 application boilerplate",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Artem Manchenkov",
      "email": "artyom@manchenkoff.me"
    }
  ],
  "autoload": {
    "psr-4": {
      "app\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "tests\\": "tests/"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "cp .env.example .env"
    ]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "require": {
    "php": "^7.4",
    "ext-pcntl": "*",
    "ext-json": "*",
    "yiisoft/yii2": "^2.0",
    "yiisoft/yii2-swiftmailer": "^2.1",
    "vlucas/phpdotenv": "^3.3",
    "manchenkov/yii2-helpers": "^1.0",
    "manchenkov/php-helpers": "^1.0",
    "manchenkov/yii2-components": "^2.0"
  },
  "require-dev": {
    "tebazil/yii2-db-seeder": "^0.0.0",
    "deployer/deployer": "^6.4",
    "codeception/base": "^3.0",
    "phpunit/phpunit": "~8",
    "guzzlehttp/guzzle": ">=6.3.0 <7.0",
    "symfony/event-dispatcher": "<=4.2.8",
    "symfony/browser-kit": ">=2.7 <=4.2.4"
  }
}
